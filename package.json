{
  "name": "temporal-money-transfer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "client": "ts-node src/client.ts",
    "client_poc": "ts-node src/poc/client.ts",
    "format": "prettier --write .",
    "lint": "eslint src",
    "test": "mocha --exit --require ts-node/register --require source-map-support/register src/mocha/*.test.ts",
    "webpack:build": "webpack --config webpack.config.js",
    "worker": "ts-node src/worker.ts",
    "worker_poc": "npm run webpack:build && ts-node src/poc/worker.ts",
    "worker_poc2": "ts-node src/poc/worker.ts",
    "worker.watch": "nodemon src/worker.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.9.0",
    "@swc/core": "^1.7.3",
    "@temporalio/activity": "^1.8.6",
    "@temporalio/client": "^1.8.6",
    "@temporalio/common": "^1.8.6",
    "@temporalio/worker": "^1.8.6",
    "@temporalio/workflow": "^1.8.6",
    "@types/node-fetch": "^2.6.11",
    "esbuild": "^0.23.0",
    "fast-crc32c": "^2.0.0",
    "firebase": "^10.12.4",
    "firebase-admin": "^11.5.0",
    "google-gax": "^4.3.8",
    "mocha": "^10.2.0",
    "nanoid": "3.x",
    "node-fetch": "^2.7.0",
    "request": "^2.88.2",
    "uglify-js": "^3.19.1",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.8.6",
    "@tsconfig/node18": "^1.0.0",
    "@types/jest": "^29.5.5",
    "@types/mocha": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "jest": "^29.7.0",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "nodemon": "^2.0.12",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "util": "^0.12.5",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}